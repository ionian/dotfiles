! Urxvt
Uxvt.buffered: true
URxvt.cursorColor: #395573
URxvt.cursorUnderline: false
URxvt.cursorBlink: false
URxvt.geometry: 80x22
URxvt.transparent: 0
URxvt*urgentOnBell: true
URxvt.lineSpace: 0
URxvt.letterSpace: -1
URxvt*scrollBar_right: false
URxvt*scrollBar: false
URxvt*borderLess: false

! Font settings
 Xft.autohint: 0
 Xft.lcdfilter:  lcddefault
 Xft.hintstyle:  hintfull
 Xft.hinting: 1
 Xft.antialias: 1
 Xft.rgba: rgb
 URxvt*skipBuiltinGlyphs: true

! -- Fonts -- !
URxvt*font:xft:dejavu sans mono:medium:pixelsize=12, \
            xft:unifont:medium
URxvt*boldFont:xft:dejavu sans mono:medium:pixelsize=12, \
            xft:unifont:medium

!URxvt*font:xft:droid sans mono slashed:pixelsize=16
!URxvt*boldFont:xft:droid sans mono slashed:pixelsize=16
!URxvt*font:xft:luxi mono:regular:pixelsize=16
!URxvt*boldFont:xft:luxi mono:regular:pixelsize=16

! -- Colours -- !
#include "/home/mike/.config/colours/dark"

! --  Extensions -- !
URxvt.perl-ext-common:      matcher,keyboard-select,url-select,clipboard
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-s:           perl:keyboard-select:search
URxvt.keysym.M-c:           perl:clipboard:copy
URxvt.keysym.M-v:           perl:clipboard:paste
URxvt.keysym.M-C-v:         perl:clipboard:paste_escaped
URxvt.url-select.launcher:  /home/mike/Scripts/vimprobtab
URxvt.matcher.rend.0:       -Uline fg16
URxvt.matcher.button:       1

! -- Xterm settings -- !
xterm*termName: xterm-256color
xterm*locale: true
xterm*cursorColor: #395573
xterm*toolBar: false
xterm*scrollBar: false
xterm*rightScrollBar: false
xterm*background: #1A1A1A
xterm*foreground: #999999
xterm*faceName: dejavu sans mono:pixelsize=16
xterm*allowBoldFonts: false
xterm*geometry: 120X28

! -- Dzen settings -- !
dzen2.font: droid sans mono slashed:medium:pixelsize=13
dzen2.foreground: #C0C0C0
dzen2.background: #121212


